# Vaani - Environment Variables Template
# Copy this to .env and fill in your values

# ============================================
# Google Cloud Credentials
# ============================================

# Google Gemini API Key (for AI text simplification)
GOOGLE_API_KEY=your_gemini_api_key_here

# Path to Google Cloud service account JSON (for Speech-to-Text, Firestore, Storage)
# Leave empty if using default credentials in Cloud Run
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ============================================
# Firebase Configuration
# ============================================

# Firebase Storage bucket name
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ============================================
# Application Configuration
# ============================================

# Environment: development or production
ENVIRONMENT=development

# Server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*
